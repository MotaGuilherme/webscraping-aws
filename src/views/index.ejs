<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Products</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
<h1>Products</h1>
<table>
    <thead>
    <tr>
        <th>URL</th>
        <th>Title</th>
        <th>Price</th>
        <th>Description</th>
        <th>Rating</th>
        <th>Comments</th>
        <th>Scraped At</th>
        <th>Duration</th>
        <th>Size</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    <% if (Array.isArray(products) && products.length > 0) { %>
        <% products.forEach(function(product) { %>
            <tr>
                <td><%= product.url %></td>
                <td><%= product.title %></td>
                <td><%= product.price %></td>
                <td><%= product.description %></td>
                <td><%= product.rating %></td>
                <td>
                    <% product.comments.forEach(function(comment) { %>
                        <p>Author: <%= comment.author %></p>
                        <p>Date: <%= comment.date %></p>
                        <p>Comment: <%= comment.comment %></p>
                        <br>
                    <% }); %>
                </td>
                <td><%= product.scrapedAt %></td>
                <td><%= product.duration %></td>
                <td><%= product.size %></td>
                <td><%= product.status %></td>
            </tr>
        <% }); %>
    <% } else { %>
        <tr>
            <td colspan="10">No products found.</td>
        </tr>
    <% } %>
    </tbody>
</table>
</body>
</html>